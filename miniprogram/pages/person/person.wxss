/* pages/person/person.wxss */
.person{
  background: #00409A;
  height: 250rpx;
  position: relative;
}
.person-img{
  width: 170rpx;
  height: 170rpx;
  display: block;
  overflow: hidden;
  border-radius:50%;
  position: absolute;
  left: 60rpx;
}
.person-name{
  position: absolute;
  top: 100rpx;
  left: 270rpx;
  color: white;
}
/* 天气 */
.index {
  min-height: 500rpx;
  font-size: 24px;
  color: white;
}
.location {
  border: 2rpx solid #FF5252;
  border-radius: 30px;
  width: 400rpx;
  margin: 20rpx auto 40rpx auto;
  padding: 10rpx 10rpx;
  background-color: #FF5252;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2a579a;
  border-radius: 8rpx;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  color: #2a579a;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx;
}

.hotcity-common {
  font-size: 30rpx;
  color: #666;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}
.banner{height: 400px;background-color:#ddd;}

.customSwiper {
  height: 420rpx;
  position: relative;
  }
.customSwiper swiper{height: 100%;}
.tab{
  height: 7orpx;
  position: absolute;
  bottom: 0;
  display:flex;
  width: 100%;
  text-align: center;
  justify-content:center;
  align-items: center;
}
.tab .tab-item{
   background-color: #ccc;
   height: 50rpx;width: 50rpx;
  line-height: 50rpx;font-size:12rpx;
  color:#fff;border-radius: 4px;
  margin-right:10px;
}
.tab .tab-item.selected{ background-color: #2a579a;}

.fuBlock{
  height: 100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  padding:15rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 10rpx;
  color:  #666;
  font-size:15px;
  background-color:#ececec;
  border-radius: 3px;
  box-shadow: 0 0 15px #b3b3b3;
}
/* 更多功能 */
.moreFunction{
  margin-top: 40rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.plus{
  width: 50px;
  height: 50px;
  border:2px dashed rgb(131, 131, 131);
  border-radius: 7px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px;
